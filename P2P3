    class Program
    {
        static void Main(string[] args)
        {
           
            int suma = 0;
            int i = 0;
            while (i <= 10){
                suma += i++;
                Console.WriteLine(suma);
                Console.WriteLine(i);
            }
            Console.ReadKey();
        }
    }
}

